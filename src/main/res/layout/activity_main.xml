<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.robnet.myfirstapplication.MainActivity"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <fragment android:name="com.android.robnet.myfirstapplication.RoomNameFragment"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:background="#030F00"
        android:id="@+id/room_name_fragment"
        tools:layout="@layout/room_name_fragment" />

    <fragment android:name="com.android.robnet.myfirstapplication.RoomStateFragment"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55"
        android:background="#030F00"
        android:id="@+id/room_state_fragment"
        tools:layout="@layout/room_state_fragment" />

    <fragment android:name="com.android.robnet.myfirstapplication.OptionPaneFragment"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:background="#030F00"
        android:id="@+id/option_pane_fragment"
        tools:layout="@layout/option_pane_fragment" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="#030F00"
        android:id="@+id/main_activity_button"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/button"
            android:background="#32D87A"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>